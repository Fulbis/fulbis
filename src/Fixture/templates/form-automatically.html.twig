<form action="{{ path('fixture.create.automatically', {leagueId: routeParams.leagueId}) }}" method="post">


    <fieldset class="form-group row">
        <legend class="col-form-legend col-sm-12">How many games does each team play against each other?</legend>
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="totalGames" value="1" checked required data-reuse-submitted-value="true">
                    One game
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="totalGames" value="2" required data-reuse-submitted-value="true">
                    Two games
                </label>
            </div>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-block btn-success">Create Fixture</button>
</form>